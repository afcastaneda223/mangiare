<div class="row">
    <% @cats.each do |cat| %>
        <% if cat.products.where(featured: true).first.image.attached? %>
            <%= image_tag(cat.products.where(featured: true).first.image, class:'img-fluid', id:'featured_img' )%>
        <% end %>
        <div class="col-12">
            <h1 style= text-align:center> 
                <%= cat.heading %>
            </h1>
            <hr />
        </div>
        <% @product.each do |product| %>
            <% if product.category == cat %>
                <div class="col-4 container">
                    <div class="card" style="width: 18rem;">
                    <%= image_tag("/pizza.jpeg", alt:'pizza', class:"card-img-top") %>
                    <div class="card-body">
                        <h5 class="card-title"><%= product.description %></h5>
                        <p class="card-text"><%= product.price %> <%= "| Available for catering" if product.catering %></p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                    </div>
                </div>
                    <% end %>
            <% end %> 
        <% end %>
</div>



